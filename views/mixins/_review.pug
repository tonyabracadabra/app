mixin review(review)
  if review.author
    .review__header
      .review__author
        img.avatar(src=`${review.author.gravatar}&d=404`, onerror=`this.src = 'http://i.pravatar.cc/300?u=x-${review.author._id}'`)
        p #{review.author.name}
      .review__stars(title=`Rated ${review.rating} out of 5 stars`)
        = `★`.repeat(review.rating)
        = `☆`.repeat(5 - review.rating)
        span.hide= `Rated ${review.rating} out of 5 stars`
      time.review__time(datetime=review.created) #{h.moment(review.created).fromNow()}
    .review__body
      p= review.text
